{% extends 'base.html.twig' %}

{% block body %}
    <h1>Livres list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Edition</th>
                <th>Dateedition</th>
                <th>Idauteur</th>
                <th>Isbn</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for livre in livres %}
            <tr>
                <td><a href="{{ path('livre_show', { 'id': livre.id }) }}">{{ livre.id }}</a></td>
                <td>{{ livre.titre }}</td>
                <td>{{ livre.edition }}</td>
                <td>{% if livre.dateEdition %}{{ livre.dateEdition|date('Y-m-d') }}{% endif %}</td>
                <td>{{ livre.idAuteur }}</td>
                <td>{{ livre.isbn }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('livre_show', { 'id': livre.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('livre_edit', { 'id': livre.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('livre_new') }}">Create a new livre</a>
        </li>
    </ul>
{% endblock %}
